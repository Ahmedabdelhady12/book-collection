<!DOCTYPE html>
<html>

<head>
	<title>Book collection </title>
</head>
<style>
	table {
		font-family: arial, sans-serif;
		border-collapse: collapse;
		width: 100%;
        position: absolute;
        top: 15%;
        width: 70%;
        float: right;
        margin: 0 28%;
	}
    .nd{
        text-decoration: none;
        font-size: 30px;
        color: red;
    }

	td,
	th {
		border: 1px solid #dddddd;
		text-align: left;
		padding: 8px;
	}

	tr:nth-child(even) {
		background-color: rgb(0, 0, 0);
	}
    table{
        background-color: rgb(0, 13, 54);
        color: #fff;
        font-family: sans-serif;
    }

    .reserved{
        padding: 10px;
        width: 100%;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-size: 20px;
        color: #dddddd;
        cursor: pointer;
        background-color: rgb(31, 1, 163);
    }
    .delete{
        padding: 10px;
        width: 100%;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-size: 20px;
        color: #dddddd;
        cursor: pointer;
        background-color: rgb(31, 1, 163);
    }
    .return{
        padding: 10px;
        width: 100%;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-size: 20px;
        cursor: pointer;
        color: #dddddd;
        background-color: rgb(31, 1, 163);
    }
    .add--book{
        width: 25%;
        padding: 10px;
        display: flex;
        flex-direction: column;
        box-shadow: 0 5px 10px rgba(0,0,0,0.3);
        background-color: #fff;
        margin: 0 10px;
    }
    .add--book h1{
        font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
        font-size: 45px;
        font-weight: 200;
        text-align: center;
    }
    .add--book input[type="text"]{
        width: 95%;
        height: 6vh;
        margin: 10px 0;
    }
    .add--book::placeholder{
        font-size: 18px;
    }
    body{
        background-color: rgb(143, 135, 135);
    }
    .add--book--btn{
        padding: 10px;
        margin: 10px 0;
        border-radius: 50px;
        background-color: #000000;
        color: #fff;
        border: 1px solid grey;
        font-size: 18px;
    }
    .add--book--btn:hover{
        background-color: #fff;
        color: #000;
        transform: scale(0.9);
        cursor: pointer;
        transition: 0.5s ease-in-out;
    }
    nav{
        display: flex;
        justify-content: space-between;
        height: 80px;
        padding: 0  80px;
    }
    .nav{
        display: flex;
        margin: 10px 0;
    }
    .nav li{
        padding: 5px 20px;
        font-size: 18px;
        list-style: none;
    }
    .nav li{
        cursor: pointer;
    }
.fo{
    width: 300px;
    height: 30px;
    margin: auto;
    margin-bottom: 30px;
    background-color: #ffffff;
}
.bt{
    width: 100px;
    height: 30px;
}
</style>

<body>
    <nav>
	<h1>All Books</h1>
    <div class="nav">
        <li><a href="/" class="nd" >Home</a></li>
    </div>
    </nav>
    <form action="/search" method="POST">
        <input type="text" name="bookName" placeholder="write book name" class="fo">
        <button type="submit" class="bt">search</button>
    </form>
	<table>
		<tr>
			<th>Book Name</th>
			<th>Book Author</th>
			<th>Book Pages</th>
			<th>Book Price</th>
			<th>Book Availability</th>
			<th>Issue</th>
			<th>Return</th>
			<th>Delete</th>
		</tr>
		<% data.forEach(element=> { %>
			<tr>
				<td>
					<%= element.bookName %>
				</td>
				<td>
					<%= element.bookAuthor %>
				</td>
				<td>
					<%= element.bookPages %>
				</td>
				<td>
					<%= element.bookPrice %>
				</td>
				<td>
					<%= element.bookState %>
				</td>
                <td>
                    <form action="/reserved" method="post">
                        <input type="text" style="display: none;" 
                               name="bookName" 
                               value="<%= element.bookName %>">
                        <button type="submit" class="reserved">reserved</button>
                    </form>
                </td>
                <td>
                    <form action="/return" method="post">
                        <input type="text" style="display: none;" 
                               name="bookName" 
                               value="<%= element.bookName %>">
                        <button type="submit" class="return">Return</button>
                    </form>
                </td>
                <td>
                    <form action="/delete" method="post">
                        <input type="text" style="display: none;" 
                               name="bookName" 
                               value="<%= element.bookName %>">
                        <button type="submit" class="delete">Delete</button>
                    </form>
                </td>
			</tr>
            </form>
			<% }) %>

	</table>
    <form action="/" method="POST" class="add--book">
        <h1>Add a Book here</h1>
       <input type="text"  id="input" name="bookName" placeholder="Enter BookName here..">
       <input type="text"  id="input" name="bookAuthor" placeholder="BookAuthor here...">
       <input type="text"  id="input" name="bookPages" placeholder="Enter BookPages here....">
       <input type="text"  id="input" name="bookPrice" placeholder="Enter BookPrice here.....">
       <input type="submit" value="AddBook" class="add--book--btn">
    </form>

</html>
